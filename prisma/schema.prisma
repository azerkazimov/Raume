generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
    id String @id @default(uuid())

    name     String
    email    String @unique
    password String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Product {
    id String @id @default(uuid())

    name        String
    price       Float
    image       String
    description String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Review {
    id Int @id @default(autoincrement())

    content String
    rating  String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Comment {
    id Int @id @default(autoincrement())

    name String
    email String
    content String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
